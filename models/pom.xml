<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ubicompsystem</groupId>
    <artifactId>google-hotelads-models</artifactId>
    <version>1.0.0</version>

    <name>google-hotelads-models</name>

    <properties>
        <javaSourceVersion>1.7</javaSourceVersion>
        <javaTargetVersion>1.7</javaTargetVersion>
    </properties>

    <dependencies>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${javaSourceVersion}</source>
                        <target>${javaTargetVersion}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <id>hotelads-xsd</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>com.ubicompsystems.integration.google.hotelads</packageName>
                            <sources>
                                <source>src/main/resources/xsd/com/gstatic/localfeed</source>
                            </sources>
                        </configuration>
                    </execution>
            </executions>
            </plugin>
        </plugins>
    </build>
</project>
